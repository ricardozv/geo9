{% block title %}Cliente{% endblock %}

{% block body %}

    <h1>Cliente Cadastrado</h1>

    <br>
    <br>

    <table class="table" border="1px" cellpadding="5px" cellspacing="2">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ client.nome }}</td>
            </tr>
            <tr>
                <th>Endereco</th>
